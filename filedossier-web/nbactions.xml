<?xml version="1.0" encoding="UTF-8"?>
<actions>
    <action>
        <actionName>CUSTOM-clean install debug</actionName>
        <displayName>clean install debug</displayName>
        <goals>
            <goal>clean</goal>
            <goal>install</goal>
            <goal>-X</goal>
        </goals>
        <properties>
            <jpda.listen>maven</jpda.listen>
            <OASISCatalogManager.catalog.debug.level>99</OASISCatalogManager.catalog.debug.level>
        </properties>
    </action>
    <action>
        <actionName>CUSTOM-verify</actionName>
        <displayName>verify</displayName>
        <goals>
            <goal>verify</goal>
        </goals>
        <properties>
            <maven.test.skip>false</maven.test.skip>
            <forkMode>once</forkMode>
            <maven.surefire.debug>-Xdebug -Xrunjdwp:transport=dt_socket,server=n,address=${jpda.address}</maven.surefire.debug>
            <jpda.listen>true</jpda.listen>
        </properties>
    </action>
    <action>
        <actionName>CUSTOM-test</actionName>
        <displayName>test</displayName>
        <goals>
            <goal>test</goal>
        </goals>
        <properties>
            <maven.test.skip>false</maven.test.skip>
            <forkMode>once</forkMode>
            <maven.surefire.debug>-Xdebug -Xrunjdwp:transport=dt_socket,server=n,address=${jpda.address}</maven.surefire.debug>
            <jpda.listen>true</jpda.listen>
        </properties>
    </action>
    <action>
        <actionName>CUSTOM-SchemaGenerator</actionName>
        <displayName>SchemaGenerator</displayName>
        <goals>
            <goal>exec:java</goal>
        </goals>
        <properties>
            <jpda.listen>maven</jpda.listen>
            <exec.mainClass>ru.ilb.filedossier.runners.SchemaGenerator</exec.mainClass>
        </properties>
        <activatedProfiles>
            <activatedProfile>standalone</activatedProfile>
            <activatedProfile>server</activatedProfile>
        </activatedProfiles>
    </action>
    <action>
        <actionName>CUSTOM-site</actionName>
        <displayName>site</displayName>
        <goals>
            <goal>site</goal>
        </goals>
    </action>
    <action>
        <actionName>CUSTOM-schemagen</actionName>
        <displayName>schemagen</displayName>
        <goals>
            <goal>install</goal>
        </goals>
        <activatedProfiles>
            <activatedProfile>server</activatedProfile>
            <activatedProfile>standalone</activatedProfile>
            <activatedProfile>schemagen</activatedProfile>
        </activatedProfiles>
    </action>
    <action>
        <actionName>CUSTOM-java2wadl</actionName>
        <displayName>java2wadl</displayName>
        <goals>
            <goal>install</goal>
        </goals>
        <activatedProfiles>
            <activatedProfile>standalone</activatedProfile>
            <activatedProfile>server</activatedProfile>
            <activatedProfile>java2wadl</activatedProfile>
        </activatedProfiles>
    </action>
</actions>
